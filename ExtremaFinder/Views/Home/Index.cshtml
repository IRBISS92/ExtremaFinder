@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-md-4 sidebar">
    @using (Ajax.BeginForm("ChartPartial", new AjaxOptions { OnSuccess = "OnSuccess"}))
    {
        <div class="row">
            <div class="col-md-10 form-group">
                <label>ФУНКЦИЯ F(X):</label>
                <input type="text" class="form-control input-lg" name="Function" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-5">
                <label for="lower-limit">НИЖНЕЕ ОГРАН.:</label>
                <input type="text" class="form-control input-lg" name="LowerLimit" />
            </div>
            <div class="form-group col-md-5">
                <label for="higher-limit">ВЕРХНЕЕ ОГРАН.:</label>
                <input type="text" class="form-control input-lg" name="HigherLimit" />
            </div>
        </div>
        <div class="row">
            <div class="form-check col-md-3">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="ExtremumType" value="maximum" checked>
                    <span>MAX</span>
                </label>
            </div>
            <div class="form-check col-md-3">
                <label class="form-check-label">
                    <input class="form-check-input" type="radio" name="ExtremumType" value="minimum">
                    <span>MIN</span>
                </label>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <input type="submit" class="btn btn-search" value="ПОИСК" />
            </div>
        </div>


    }
</div>
<div class="col-md-8 chart-wrapper"></div>
<script type="text/javascript">
    function OnSuccess(response) {
        $(".chart-wrapper").html(response);
    }
</script>


